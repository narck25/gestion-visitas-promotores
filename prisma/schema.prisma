generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(dbgenerated("gen_random_uuid()"))
  email         String         @unique
  password      String
  name          String
  role          String         @default("PROMOTER")
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now()) @db.Timestamp(6)
  updatedAt     DateTime       @default(now()) @updatedAt @db.Timestamp(6)
  refreshTokens RefreshToken[]
  visits        Visit[]

  @@index([email], map: "idx_user_email")
}

model Client {
  id           String   @id @default(dbgenerated("gen_random_uuid()"))
  name         String
  phone        String?
  email        String?
  address      String?
  businessType String?
  notes        String?
  createdAt    DateTime @default(now()) @db.Timestamp(6)
  updatedAt    DateTime @default(now()) @updatedAt @db.Timestamp(6)
  visits       Visit[]
}

model Visit {
  id         String   @id @default(dbgenerated("gen_random_uuid()"))
  promoterId String
  clientId   String
  date       DateTime @default(now()) @db.Timestamp(6)
  latitude   Float?
  longitude  Float?
  address    String?
  notes      String
  status     String   @default("COMPLETED")
  photos     String[] @default([])
  signature  String?
  createdAt  DateTime @default(now()) @db.Timestamp(6)
  updatedAt  DateTime @default(now()) @updatedAt @db.Timestamp(6)
  client     Client   @relation(fields: [clientId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  promoter   User     @relation(fields: [promoterId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([clientId], map: "idx_visit_client_id")
  @@index([date], map: "idx_visit_date")
  @@index([promoterId], map: "idx_visit_promoter_id")
  @@index([status], map: "idx_visit_status")
}

model RefreshToken {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  token     String   @unique
  userId    String
  expiresAt DateTime @db.Timestamp(6)
  createdAt DateTime @default(now()) @db.Timestamp(6)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([token], map: "idx_refresh_token_token")
  @@index([userId], map: "idx_refresh_token_user_id")
}
