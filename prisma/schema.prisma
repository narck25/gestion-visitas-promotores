generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(dbgenerated("uuid_generate_v4()"))
  email         String         @unique
  password      String
  name          String
  phone         String?
  avatar        String?
  role          Role           @default(PROMOTER)
  isActive      Boolean        @default(true)
  lastLoginAt   DateTime?
  supervisorId  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  clients       Client[]
  refreshTokens RefreshToken[]
  visits        Visit[]
  supervisor    User?          @relation("SupervisorPromoters", fields: [supervisorId], references: [id])
  promoters     User[]         @relation("SupervisorPromoters")

  @@index([role])
  @@index([isActive])
  @@index([createdAt])
  @@index([email])
  @@index([supervisorId])
}

model Client {
  id           String        @id @default(dbgenerated("uuid_generate_v4()"))
  name         String
  businessName String?
  phone        String?
  email        String?
  address      String?
  city         String?
  state        String?
  country      String?       @default("MÃ©xico")
  postalCode   String?
  businessType BusinessType?
  category     String?
  notes        String?
  promoterId   String?
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  promoter     User?         @relation(fields: [promoterId], references: [id])
  visits       Visit[]

  @@index([businessName])
  @@index([businessType])
  @@index([createdAt])
  @@index([isActive])
  @@index([name])
  @@index([promoterId])
}

model Visit {
  id            String       @id @default(dbgenerated("uuid_generate_v4()"))
  promoterId    String
  clientId      String
  date          DateTime     @default(now())
  scheduledDate DateTime?
  duration      Int?
  latitude      Float?
  longitude     Float?
  address       String?
  accuracy      Float?
  status        VisitStatus  @default(COMPLETED)
  purpose       VisitPurpose @default(SALES)
  notes         String
  rating        Int?         @default(5)
  beforePhotos  String[]
  afterPhotos   String[]
  signature     String?
  signedAt      DateTime?
  isSynced      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  client        Client       @relation(fields: [clientId], references: [id])
  promoter      User         @relation(fields: [promoterId], references: [id])

  @@index([clientId])
  @@index([createdAt])
  @@index([date])
  @@index([isSynced])
  @@index([promoterId])
  @@index([purpose])
  @@index([status])
}

model RefreshToken {
  id         String    @id @default(dbgenerated("uuid_generate_v4()"))
  token      String    @unique
  userId     String
  deviceInfo String?
  expiresAt  DateTime
  revokedAt  DateTime?
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
  @@index([token])
  @@index([userId])
}

enum Role {
  SUPER_ADMIN
  ADMIN
  SUPERVISOR
  PROMOTER
  VIEWER
}

enum BusinessType {
  RETAIL
  WHOLESALE
  SERVICE
  MANUFACTURING
  FOOD
  OTHER
}

enum VisitPurpose {
  SALES
  FOLLOW_UP
  DELIVERY
  TRAINING
  COMPLAINT
  OTHER
}

enum VisitStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}
