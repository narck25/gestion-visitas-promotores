# Database
DATABASE_URL="postgresql://username:password@localhost:5432/gestion_visitas"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-change-this-too"
